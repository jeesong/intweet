<li>
  <%= jeevatar_for user, 50 %>
  <%= link_to user.name, user %>
  <% if !current_user?(user) && current_user.following?(user) %>
    | <%= link_to "Unfollow", relationship_path(id: current_user.active_relationships.find_by(followed_id: user.id)), remote: true, method: :delete  %>
  <% elsif !current_user?(user) %>
    | <%= link_to "Follow", relationships_path(followed_id: user.id), remote: true, method: :post %>
  <% end %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
  <% end %>
</li>
